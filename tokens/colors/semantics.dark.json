{
  "colors": {
    "background": {
      "primary": {
        "$type": "color",
        "$value": "{colors.slate.100}"
      },
      "secondary": {
        "$type": "color",
        "$value": "{colors.slate.200}"
      },
      "tertiary": {
        "$type": "color",
        "$value": "{colors.slate.400}"
      },
      "inverse": {
        "$type": "color",
        "$value": "{colors.slate.100}"
      }
    },
    "text": {
      "base": {
        "$type": "color",
        "$value": "{colors.slate.1200}"
      },
      "primary": {
        "$type": "color",
        "$value": "{colors.slate.1200}"
      },
      "secondary": {
        "$type": "color",
        "$value": "{colors.slate.1100}"
      },
      "tertiary": {
        "$type": "color",
        "$value": "{colors.slate.900}"
      },
      "inverse": {
        "$type": "color",
        "$value": "{colors.slate.100}"
      },
      "accent": {
        "$type": "color",
        "$value": "{colors.blue.1100}"
      }
    },
    "surface": {
      "primary": {
        "$type": "color",
        "$value": "{colors.slate.200}"
      },
      "secondary": {
        "$type": "color",
        "$value": "{colors.slate.300}"
      }
    },
    "border": {
      "primary": {
        "$type": "color",
        "$value": "{colors.slate.600}"
      },
      "secondary": {
        "$type": "color",
        "$value": "{colors.slate.500}"
      },
      "accent": {
        "$type": "color",
        "$value": "{colors.blue.700}"
      },
      "inverse": {
        "$type": "color",
        "$value": "{colors.slate.1200}"
      }
    },
    "separator": {
      "primary": {
        "$type": "color",
        "$value": "{colors.slate.500}"
      },
      "secondary": {
        "$type": "color",
        "$value": "{colors.slate.600}"
      }
    },
    "icon": {
      "primary": {
        "$type": "color",
        "$value": "{colors.slate.1200}"
      },
      "muted": {
        "$type": "color",
        "$value": "{colors.slate.900}"
      },
      "inverse": {
        "$type": "color",
        "$value": "{colors.slate.100}"
      },
      "accent": {
        "$type": "color",
        "$value": "{colors.blue.1100}"
      }
    },
    "state": {
      "error": {
        "primary": {
          "$type": "color",
          "$value": "{colors.red.900}"
        }
      },
      "warning": {
        "primary": {
          "$type": "color",
          "$value": "{colors.yellow.900}"
        }
      },
      "info": {
        "primary": {
          "$type": "color",
          "$value": "{colors.blue.900}"
        }
      },
      "success": {
        "primary": {
          "$type": "color",
          "$value": "{colors.green.900}"
        }
      }
    }
  },
  "shadow": {
    "default": {
      "$type": "shadow",
      "$value": {
        "x": 0,
        "y": 4,
        "blur": 8,
        "spread": 0,
        "color": "rgba(0, 0, 0, 0.6)"
      }
    },
    "soft": {
      "$type": "shadow",
      "$value": {
        "x": 0,
        "y": 2,
        "blur": 4,
        "spread": 0,
        "color": "rgba(0, 0, 0, 0.3)"
      }
    }
  }
}
